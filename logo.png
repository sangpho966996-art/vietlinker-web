<!-- OPTION 3: Dùng SVG Logo (Không cần upload file) -->
<!-- Copy và paste trực tiếp vào HTML: -->

<a href="index.html" class="logo" style="text-decoration: none; display: flex; align-items: center; gap: 12px;">
    <!-- SVG Logo -->
    <svg width="55" height="55" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
        <!-- Background circle -->
        <circle cx="50" cy="50" r="48" fill="url(#gradient1)" />
        
        <!-- VL Text -->
        <text x="50" y="50" 
              font-family="Arial, sans-serif" 
              font-size="32" 
              font-weight="bold" 
              fill="white" 
              text-anchor="middle" 
              dominant-baseline="central">VL</text>
        
        <!-- Gradient definition -->
        <defs>
            <linearGradient id="gradient1" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#1e3c72;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#dc143c;stop-opacity:1" />
            </linearGradient>
        </defs>
        
        <!-- Connection dots -->
        <circle cx="25" cy="25" r="3" fill="white" opacity="0.8"/>
        <circle cx="75" cy="25" r="3" fill="white" opacity="0.8"/>
        <circle cx="25" cy="75" r="3" fill="white" opacity="0.8"/>
        <circle cx="75" cy="75" r="3" fill="white" opacity="0.8"/>
        
        <!-- Connection lines -->
        <line x1="25" y1="25" x2="75" y2="25" stroke="white" stroke-width="1" opacity="0.3"/>
        <line x1="25" y1="75" x2="75" y2="75" stroke="white" stroke-width="1" opacity="0.3"/>
        <line x1="25" y1="25" x2="25" y2="75" stroke="white" stroke-width="1" opacity="0.3"/>
        <line x1="75" y1="25" x2="75" y2="75" stroke="white" stroke-width="1" opacity="0.3"/>
    </svg>
    
    <!-- Text -->
    <span style="
        font-size: 26px;
        font-weight: 700;
        color: #1e3c72;
    ">VietLinker</span>
</a>

